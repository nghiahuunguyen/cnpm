<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lý Cycbergame</title>
    <link rel="styletc" href="~/Public/css/styletc.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body class="h-100">
    <div class="bg-image p-5 shadow-1-strong rounded min-vh-100" style="background-image: url('Public/img/bg.png');">


        <section class="vh-100 glass">
            <div class="container-fluid h-custom">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-md-9 col-lg-6 col-xl-5">
                        <img src="~/Public/img/logo.png"
                             class="img-fluid" alt="Sample image">
                    </div>
                    <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                        <form action="" method="post">
                            <div>
                                <h2 class="my-5 text-center text-primary">Quản lí Cyber</h2>
                            </div>

                            <!-- Tai khoan input -->
                            <div data-mdb-input-init class="form-outline mb-4">
                                <label class="form-label text-light">Tên đăng nhập</label>
                                <input type="text" id="dangnhap" name="username" class="form-control form-control-lg" placeholder="Tài khoản" />

                            </div>

                            <!-- Mat khau input -->
                            <div data-mdb-input-init class="form-outline mb-3">
                                <label class="form-label text-light">Mật khẩu</label>
                                <input type="password" id="matkhau" name="password" class="form-control form-control-lg" placeholder="Mật khẩu" />

                            </div>

                            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                            {
                                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                            }
                            <div class="text-center text-lg-start mt-4 pt-2">
                                <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg mt-2 position-relative start-50 translate-middle px-4"
                                        style="text-align: center; ">
                                    Đăng nhập
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>