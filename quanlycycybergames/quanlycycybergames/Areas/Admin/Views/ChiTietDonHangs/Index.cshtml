@model IEnumerable<quanlycycybergames.Models.ChiTietDonHang>
@{
    ViewBag.Title = "Chi Tiết Đơn Đặt Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-wrapper bg-light-gray" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">

    <div class="body-wrapper">
        <!--  Header Start -->
        <!--  Header End -->
        <div class="container-fluid">
            <div class="my-3">
                <h1 class="fw-bolder text-center">DANH SÁCH CHI TIẾT ĐƠN ĐẶT HÀNG</h1>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create", "ChiTietDonHangs")" class="btn btn-success"><i class="fa fa-plus"> Tạo mới</i></a>
            </div>
            <div class="table">
                <table class="table table-striped bg-light-gray rounded" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
                    <thead class="text-dark fs-4">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.MaDH)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DichVu.TenDV)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.soluong)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.tongGia)
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.MaDH)</td>
                                <td>@Html.DisplayFor(modelItem => item.DichVu.TenDV)</td>
                                <td>@Html.DisplayFor(modelItem => item.soluong)</td>
                                <td>@Html.DisplayFor(modelItem => item.tongGia)</td>
                                <td class="border-bottom-0">
                                    <a href="@Url.Action("Edit", "ChiTietDonHangs", new { id = item.MaDH })">
                                        <button type="button" class="btn btn-success">
                                            <i class="ti ti-edit"></i>
                                        </button>
                                    </a>

                                    <a href="@Url.Action("Details", "ChiTietDonHangs", new { id = item.MaDH })">
                                        <button type="button" class="btn btn-info">
                                            <i class="ti ti-eye"></i>
                                        </button>
                                    </a>

                                    <a href="@Url.Action("Delete", "ChiTietDonHangs", new { id = item.MaDH })">
                                        <button type="button" class="btn btn-danger">
                                            <i class="ti ti-trash"></i>
                                        </button>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>