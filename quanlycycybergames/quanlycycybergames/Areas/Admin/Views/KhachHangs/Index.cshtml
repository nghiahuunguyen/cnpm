@model IEnumerable<quanlycycybergames.Models.KhachHang>

@{
    ViewBag.Title = "Khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="page-wrapper bg-light-gray" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">

    <div class="body-wrapper">
        <!--  Header Start -->
        <!--  Header End -->
        <div class="container-fluid">
            <div class="my-3 text-center">
                <h1 class="fw-bolder">DANH SÁCH KHÁCH HÀNG</h1>
            </div>

            @using (Html.BeginForm("Index", "KhachHangs", FormMethod.Get, new { @class = "input-group Th d-flex justify-content-center", id = "searchForm" }))
            {
                <div class="input-group mb-3 w-50 m-auto">
                    <input type="text" class="form-control" name="searchString" placeholder="Nhập thông tin khách hàng" aria-label="Nhập thông tin khách hàng" aria-describedby="button-addon2">
                    <button class="btn btn-secondary" type="submit" id="button-addon2">Tìm kiếm</button>
                </div>
            }
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create", "KhachHangs")" class="btn btn-success"><i class="fas fa-user-plus"></i> Tạo mới khách hàng</a>
            </div>
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped bg-light-gray rounded" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
                        <thead class="text-dark fs-4">
                            <tr>
                                <th class="border-bottom-0">
                                    @Html.DisplayNameFor(model => model.ID_KhachHang)
                                </th>
                                <th>@Html.DisplayNameFor(model => model.TenKhachHang)</th>
                                <th>@Html.DisplayNameFor(model => model.SDT)</th>
                                <th>@Html.DisplayNameFor(model => model.GioiTinh)</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.ID_KhachHang)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TenKhachHang)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SDT)</td>
                                    <td>
                                        @if (item.GioiTinh.HasValue)
                                        {
                                            if (item.GioiTinh.Value)
                                            {
                                                <span>Nam</span>
                                            }
                                            else
                                            {
                                                <span>Nữ</span>
                                            }
                                        }
                                    </td>
                                    <td class="border-bottom-0">
                                        <a href="@Url.Action("Edit", "KhachHangs", new { id = item.ID_KhachHang })">
                                            <button type="button" class="btn btn-success">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        </a>

                                        <a href="@Url.Action("Details", "KhachHangs", new { id = item.ID_KhachHang })">
                                            <button type="button" class="btn btn-info">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </a>

                                        <a href="@Url.Action("Delete", "KhachHangs", new { id = item.ID_KhachHang })">
                                            <button type="button" class="btn btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center" role="alert">Không tìm thấy khách hàng</div>
            }
        </div>
    </div>
</div>