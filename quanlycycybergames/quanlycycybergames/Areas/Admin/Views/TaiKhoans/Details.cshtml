@model quanlycycybergames.Models.TaiKhoan

@{
    ViewBag.Title = "Chi tiết tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="page-wrapper bg-light-gray" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">

    <div class="body-wrapper">
        <!--  Header Start -->
        <!--  Header End -->
        <div class="container-fluid">
            <div class="my-3">
                <h1 class="fw-bolder text-center">CHI TIẾT TÀI KHOẢN KHÁCH HÀNG</h1>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Edit", "TaiKhoans", new { id = Model.ID_KhachHang })" class="btn btn-success"> <i class="fa fa-edit"> Sửa</i></a>
                <a href="@Url.Action("Index", "TaiKhoans")" class="btn btn-info"> <i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>
            </div>
            <div class="table">
                <table class="table table-striped bg-light-gray rounded" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
                    <thead class="text-dark fs-4">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ID_TaiKhoan)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.KhachHang.TenKhachHang)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.TenTaiKhoan)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Matkhau)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ThoiGianNap)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SoTienNap)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.ID_TaiKhoan)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.KhachHang.TenKhachHang)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.TenTaiKhoan)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Matkhau)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.ThoiGianNap)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.SoTienNap)
                            </td>

                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.content-wrapper -->