@model IEnumerable<quanlycycybergames.Models.DonHang>

@{
    ViewBag.Title = "Đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-wrapper bg-light-gray" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">

    <div class="body-wrapper">
        <!--  Header Start -->
        <!--  Header End -->
        <div class="container-fluid">
            <div class="container-fluid">
                <div class="my-3">
                    <h1 class="fw-bolder text-center">DANH SÁCH ĐƠN HÀNG</h1>
                </div>
                @using (Html.BeginForm("Index", "DonHangs", FormMethod.Get, new { @class = "input-group Th d-flex justify-content-center" }))
                {
                    <div class="input-group mb-3 w-50 m-auto">
                        <input type="text" class="form-control" name="searchName" placeholder="Nhập tên khách hàng" aria-label="Nhập tên khách hàng" aria-describedby="button-addon2">
                        <button class="btn btn-secondary" type="submit" id="button-addon2">Tìm kiếm</button>
                    </div>
                }
                <div class="col-md-6 text-right">
                    <a href="@Url.Action("Create", "DonHangs")" class="btn btn-success"><i class="fa fa-plus"> Tạo mới</i></a>
                </div>
                @if (Model.Any())
                {
                    <div class="table">
                        <table class="table table-striped bg-light-gray rounded" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
                            <thead class="text-dark fs-4">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaDH)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.KhachHang.TenKhachHang)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ngayDatHang)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.tongGia)
                                    </th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@Html.DisplayFor(modelItem => item.MaDH)</td>
                                        <td>@Html.DisplayFor(modelItem => item.KhachHang.TenKhachHang)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ngayDatHang)</td>
                                        <td>@Html.DisplayFor(modelItem => item.tongGia)</td>
                                        <td class="border-bottom-0">
                                            <a href="@Url.Action("Edit", "DonHangs", new { id = item.MaDH })">
                                                <button type="button" class="btn btn-success">
                                                    <i class="ti ti-edit"></i>
                                                </button>
                                            </a>

                                            <a href="@Url.Action("Details", "DonHangs", new { id = item.MaDH })">
                                                <button type="button" class="btn btn-info">
                                                    <i class="ti ti-eye"></i>
                                                </button>
                                            </a>

                                            <a href="@Url.Action("Delete", "DonHangs", new { id = item.MaDH })">
                                                <button type="button" class="btn btn-danger">
                                                    <i class="ti ti-trash"></i>
                                                </button>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div cclass="alert alert-warning text-center" role="alert">Không tìm thấy đơn hàng</div>
                }
            </div>
        </div>
    </div>
