@model quanlycycybergames.Models.DonHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@{
    ViewBag.Title = "Chỉnh sửa chi tiết mặt hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaDH);

    <div class="page-wrapper bg-light-gray" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed">
        <div class="body-wrapper">
            <div class="container-fluid">
                <div class="my-3">
                    <h1 class="fw-bolder text-center">CHỈNH SỬA CHI TIẾT MẶT HÀNG</h1>
                </div>
                <div class="col-md-6 text-right">
                    <a href="@Url.Action("Index", "s")" class="btn btn-info"> <i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ID_KhachHang, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.ID_KhachHang, new SelectList((List<quanlycycybergames.Models.KhachHang>)ViewBag.KH, "ID_KhachHang", "TenKhachHang"), "Chọn khách hàng", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ID_KhachHang, "", new { @class = "text-danger" })
                    </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ngayDatHang, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ngayDatHang, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ngayDatHang, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Lưu" class="btn btn-success create-button" />
                        </div>
                    </div>
                </div>
        </div>
    </div>
}